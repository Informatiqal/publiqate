{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2017",
        "declaration": true,
        "module": "ES2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}