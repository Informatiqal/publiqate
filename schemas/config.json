                        "logLevel": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "enum": [
                                        "debug",
                                        "info",
                                        "error"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "required": [
                                        "core"
                                    ],
                                    "properties": {
                                        "core": {
                                            "type": "string",
                                            "enum": [
                                                "debug",
                                                "info",
                                                "error"
                                            ]
                                        },
                                        "admin": {
                                            "type": "string",
                                            "enum": [
                                                "debug",
                                                "info",
                                                "error"
                                            ]
                                        },
                                        "qlik": {
                                            "type": "string",
                                            "enum": [
                                                "debug",
                                                "info",
                                                "error"
