            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "html"
                    ]
                },
                "enabled": {
                    "type": "boolean"
                },
                "details": {
                    "type": "object",
                    "required": [
                        "template",
                        "path",
                        "engine"
                    ],
                    "properties": {
                        "template": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        },
                        "engine": {
                            "type": "string",
                            "enum": [
                                "ejs",
                                "pug",
                                "mustache",
                                "handlebars"
                            ]
