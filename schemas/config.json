                                                                                "<=",
                                                                                "==",
                                                                                "!=",
                                                                                "=",
                                                                                "<>"
                                                                            ]
                                                                        },
                                                                        "variation": {
                                                                            "type": "string"
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        "options": {
                                            "type": "object",
                                            "properties": {
                                                "user": {
                                                    "type": "string"
