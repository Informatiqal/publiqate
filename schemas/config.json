                                                "additionalProperties": true,
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "not": {
                                                            "enum": [
                                                                "file",
                                                                "s3",
                                                                "html",
                                                                "smtp",
                                                                "echo",
                                                                "http"
                                                            ]
                                                        }
                                                    },
                                                    "enabled": {
                                                        "type": "boolean"
                                                    }
                                                }
