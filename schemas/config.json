                                    "disableCors": {
                                        "type": "boolean"
                                    },
                                    "enabled": {
                                        "type": "boolean"
                                    },
                                    "whitelist": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "callbacks": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "type"
                                    ],
                                    "if": {
                                        "properties": {
                                            "type": {
                                                "oneOf": [
                                                    {
                                                        "const": "echo"
                                                    }
                                                ]
