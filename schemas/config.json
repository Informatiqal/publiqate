{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "JSON Schema for Notifiqation config file",
    "description": "Notifiqation config JSON schema (@informatiqal)",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "general": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "uri": {
                    "type": "string"
                },
                "certs": {
                    "type": "string"
                },
                "sourceWhitelist": {
                    "type": "string"
                },
                "logLevel": {
                    "type": "string",
                    "enum": [
                        "debug",
                        "info",
                        "error"
                    ]
                },
                "vars": {
                    "type": "string",
                    "description": "Location to file where secrets are stored"
                },
                "admin": {
                    "type": "object",
                    "properties": {
                        "cookie": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "value"
                            ],
                            "additionalProperties": false
                        },
                        "certs": {
                            "type": "string"
                        },
                        "port": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "cookie",
                        "certs"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "port",
                "uri",
                "admin"
            ],
            "additionalProperties": false
        },
        "qlik": {
            "type": "object",
            "properties": {
                "certs": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "userName": {
                    "type": "string"
                },
                "userDir": {
                    "type": "string"
                }
            },
            "required": [
                "certs",
                "host",
                "userName",
                "userDir"
            ],
            "additionalProperties": false
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "logLevel": {
                        "type": "string",
                        "enum": [
                            "crit",
                            "error",
                            "warning",
                            "info",
                            "debug"
                        ]
                    }
                },
                "required": [
                    "name",
                    "path"
                ],
                "additionalProperties": false
            }
        },
        "notifications": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "App",
                            "AnalyticConnection",
                            "ContentLibrary",
                            "DataConnection",
                            "Extension",
                            "ExecutionResult",
                            "ReloadTask",
                            "Stream",
                            "User",
                            "UserSyncTask",
                            "SystemRule",
                            "Tag",
                            "CustomPropertyDefinition",
                            "EngineService",
                            "OdagService",
                            "PrintingService",
                            "ProxyService",
                            "RepositoryService",
                            "SchedulerService",
                            "ServerNodeConfiguration",
                            "VirtualProxyConfig"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "changeType": {
                        "type": "string",
                        "enum": [
                            "add",
                            "update",
                            "delete"
                        ]
                    },
                    "filter": {
                        "type": "string"
                    },
                    "condition": {
                        "type": "string"
                    },
                    "propertyName": {
                        "type": "string"
                    },
                    "getEntityDetails": {
                        "type": "boolean"
                    },
                    "callback": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "details": {
                                    "type": "object",
                                    "additionalProperties": true
                                }
                            },
                            "required": [
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "type",
                    "name",
                    "id",
                    "changeType",
                    "callback"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "general",
        "qlik",
        "notifications"
    ],
    "definitions": {
        "tasks": {
            "type": "array",
            "description": "List of tasks to be executed in sequence",
            "minItems": 1,
            "items": {}
        }
    }
}