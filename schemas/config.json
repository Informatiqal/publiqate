{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "JSON Schema for Notifiqation config file",
    "description": "Notifiqation config JSON schema (@informatiqal)",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "general": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "uri": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "uri"
            ]
        },
        "qlik": {
            "type": "object",
            "properties": {
                "cert": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "userName": {
                    "type": "string"
                },
                "userDir": {
                    "type": "string"
                }
            },
            "required": [
                "cert",
                "key",
                "host",
                "userName",
                "userDir"
            ]
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "path"
                ]
            }
        },
        "notifications": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "changeType": {
                        "type": "string"
                    },
                    "propertyName": {
                        "type": "string"
                    },
                    "getEntityDetails": {
                        "type": "boolean"
                    },
                    "callback": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "details": {
                                    "type": "object"
                                }
                            },
                            "required": [
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "type",
                    "name",
                    "id",
                    "changeType",
                    "callback"
                ]
            }
        }
    },
    "required": [
        "general",
        "qlik",
        "notifications"
    ],
    "definitions": {
        "tasks": {
            "type": "array",
            "description": "List of tasks to be executed in sequence",
            "minItems": 1,
            "items": {}
        }
    }
}