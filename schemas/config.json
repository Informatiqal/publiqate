                                "enum": [
                                    "App",
                                    "AnalyticConnection",
                                    "ContentLibrary",
                                    "DataConnection",
                                    "Extension",
                                    "ExecutionResult",
                                    "ReloadTask",
                                    "Stream",
                                    "User",
                                    "UserSyncTask",
                                    "SystemRule",
                                    "Tag",
                                    "CustomPropertyDefinition",
                                    "EngineService",
                                    "OdagService",
                                    "PrintingService",
                                    "ProxyService",
                                    "RepositoryService",
                                    "SchedulerService",
                                    "ServerNodeConfiguration",
                                    "VirtualProxyConfig"
