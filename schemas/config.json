            "type": "object",
            "required": [
                "details"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "smtp"
                    ]
                },
                "enabled": {
                    "type": "boolean"
                },
                "details": {
                    "type": "object",
                    "oneOf": [
                        {
                            "type": "object",
                            "required": [
                                "html"
                            ],
                            "allOf": [
                                {
                                    "$ref": "#/definitions/smtp_plugin_base_details"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "html": {
                                            "type": "string"
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "type": "object",
                            "required": [
                                "template",
                                "engine"
                            ],
                            "allOf": [
                                {
                                    "$ref": "#/definitions/smtp_plugin_base_details"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "template": {
                                            "type": "string"
                                        },
                                        "engine": {
                                            "type": "string",
                                            "enum": [
                                                "ejs",
                                                "pug",
                                                "mustache",
                                                "handlebars"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    ]
